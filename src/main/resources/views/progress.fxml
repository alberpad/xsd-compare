<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.compare.xsd.views.ProgressView">
    <columnConstraints>
        <ColumnConstraints minWidth="50" prefWidth="50" />
        <ColumnConstraints minWidth="300" prefWidth="300" />
        <ColumnConstraints minWidth="50" prefWidth="50" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="60" />
        <RowConstraints minHeight="30" />
        <RowConstraints minHeight="30" />
        <RowConstraints minHeight="20" />
        <RowConstraints minHeight="60" />
    </rowConstraints>
    <!-- Text -->
    <Label fx:id="processText" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <!-- Progress -->
    <ProgressBar fx:id="progress" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" minWidth="300" />
    <Label fx:id="progressText" GridPane.columnIndex="1" GridPane.rowIndex="1" />
</GridPane>
